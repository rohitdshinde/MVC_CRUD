@model MVC_CRUD.Models.student
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div>
        <h2>UPDATE LIST</h2>
        @using (Html.BeginForm())
        {
            <table>
                <tr>
                    <td>Roll no.</td>
                    <td>@Html.TextBoxFor(e => e.rno)</td>
                </tr>


                <tr>
                    <td>Student name</td>
                    <td>@Html.TextBoxFor(e => e.name)</td>
                </tr>

                <tr>
                    <td>English</td>
                    <td>@Html.TextBoxFor(e => e.english)</td>
                </tr>


                <tr>
                    <td>MAth</td>
                    <td>@Html.TextBoxFor(e => e.math)</td>
                </tr>

                <tr>
                    <td>Science</td>
                    <td>@Html.TextBoxFor(e => e.science)</td>
                </tr>


                <tr>
                    <td colspan="2">
                        <input type="submit" value="SUBMIT" />
                        @Html.ActionLink("Back", "index")
                    </td>
                </tr>
            </table>

        }
    </div>
</body>
</html>
